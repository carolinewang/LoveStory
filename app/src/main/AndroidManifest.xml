<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.haylin2002.loveStory" >

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.example.haylin2002.loveStory.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon_final"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name="com.example.haylin2002.loveStory.NewLoveStory"
            android:label="@string/title_activity_new_love_story"
            android:parentActivityName="com.example.haylin2002.loveStory.LoveStory" >
        </activity>
        <activity
            android:name="com.example.haylin2002.loveStory.LoveStory"
            android:label="@string/title_activity_love_story" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.haylin2002.loveStory.SignUp"
            android:label="@string/app_name"
            android:parentActivityName="com.example.haylin2002.loveStory.Welcome" >
        </activity>
        <activity
            android:name="com.example.haylin2002.loveStory.Welcome"
            android:label="@string/title_activity_welcome" >
        </activity>
        <activity
            android:name="com.example.haylin2002.loveStory.LogIn"
            android:label="@string/title_activity_log_in"
            android:parentActivityName="com.example.haylin2002.loveStory.Welcome" >
        </activity>
        <activity
            android:name="com.example.haylin2002.loveStory.ForgetPassword"
            android:label="@string/title_activity_forget_password"
            android:parentActivityName="com.example.haylin2002.loveStory.LogIn" >
        </activity>
        <activity
            android:name="com.example.haylin2002.loveStory.MatchWithPartner"
            android:label="@string/title_activity_match_with_parther" >
        </activity>
        <activity
            android:name="com.example.haylin2002.loveStory.MyAccount"
            android:label="@string/title_activity_my_account"
            android:parentActivityName="com.example.haylin2002.loveStory.LoveStory" >
        </activity>
        <activity
            android:name="com.example.haylin2002.loveStory.MomentDetail"
            android:label="@string/title_activity_moment_detail"
            android:parentActivityName="com.example.haylin2002.loveStory.LoveStory">
        </activity>
    </application>

</manifest>
